{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.kobozo.jaterm",
  "productName": "JaTerm",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm vite build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "JaTerm",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "updater": {
    "active": true,
    "windows": { "installerArgs": [] },
    "pubkey": "PUBKEY_PLACEHOLDER_REPLACE_IN_CI",
    "provider": {
      "type": "github",
      "repo": "Kobozo/jaterm"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.kobozo.jaterm",
    "publisher": "Kobozo",
    "copyright": "Â© 2024 Kobozo. All rights reserved.",
    "category": "DeveloperTools",
    "shortDescription": "Modern terminal emulator with SSH support",
    "longDescription": "JaTerm is a powerful terminal emulator with built-in SSH client, file transfer, Git integration, and port forwarding capabilities.",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": "en-US",
        "template": null,
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "skipWebviewInstall": false,
        "license": null,
        "bannerPath": null,
        "dialogImagePath": null
      },
      "nsis": {
        "license": null,
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": null,
        "installMode": "perMachine",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ],
        "section": "utility",
        "priority": "optional",
        "files": {}
      },
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "resources": {
      "ffmpeg": null
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "all": false,
      "execute": [],
      "sidecar": [],
      "scope": []
    }
  }
}
