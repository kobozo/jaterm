{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JaTerm",
  "version": "1.5.4",
  "identifier": "com.kobozo.jaterm",
  "build": {
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm vite build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "JaTerm",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Kobozo",
    "copyright": "Â© 2025 Kobozo. All rights reserved.",
    "category": "DeveloperTools",
    "shortDescription": "Modern terminal emulator with SSH support",
    "longDescription": "JaTerm is a powerful terminal emulator with built-in SSH client, file transfer, Git integration, and port forwarding capabilities.",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "perMachine",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "frameworks": [],
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": false
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ],
        "section": "utility",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "epoch": 0,
        "release": "1"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "pubkey": "PUBKEY_PLACEHOLDER_REPLACE_IN_CI",
      "endpoints": [
        "https://github.com/Kobozo/JaTerm/releases/latest/download/latest.json"
      ],
      "_comment": "Note: latest.json must be generated and uploaded with each release using GitHub Actions"
    }
  }
}
